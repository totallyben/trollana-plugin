{
  "manifest_version": 3,
  "version": "1.1",
  "name": "Trollana Socials Reply Helper",
  "description": "Earn TROLLANA while having fun on socials!",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "tabs", "storage", "alarms", "clipboardWrite"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "Satoshi-Medium.woff2",
        "yalla.woff2",
        "sticker.gif",
        "logo.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "48": "icon-34.png",
    "128": "icon-128.png"
  },
  "commands": {
    "refresh_extension": {
      "suggested_key": {
        "default": "Alt+R"
      },
      "description": "Refresh Extension"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
